-- AutoSwing loop
task.spawn(function()
	while task.wait() do
		if _G.AutoSwing then
			local waitTime = 0.5 - (sliderValue * _G.SwingSpeedDelta)
			local player = Players.LocalPlayer
			local char = player.Character or player.CharacterAdded:Wait()
			local weapon = char:FindFirstChildOfClass("Tool")

			if weapon then
				local hitPosition = getHitPosition()
				local args = { weapon, 0, hitPosition }Â 
				
				for i = 1, hitMultiplierValue do
					ReplicatedStorage
						:WaitForChild("Shared")
						:WaitForChild("Network")
						:WaitForChild("RemoteEvent")
						:WaitForChild("SwingMelee")
						:FireServer(unpack(args))
				end
			end
			task.wait(waitTime)
		end
	end
end)

-- AutoBanjo loop
task.spawn(function()
	while task.wait() do
		if _G.AutoBanjo then
			local player = Players.LocalPlayer
			local char = player.Character or player.CharacterAdded:Wait()
			-- TÃ¬m cÃ´ng cá»¥ Banjo (thÆ°á»ng cÃ³ tÃªn lÃ  "Banjo" hoáº·c cáº§n Ä‘Æ°á»£c Ä‘iá»u chá»‰nh tÃ¹y game)
			local banjoTool = char:FindFirstChild("Banjo") 

			if banjoTool then
				local args = { banjoTool, banjoNoteValue } 
				
				-- Gá»­i yÃªu cáº§u Ä‘Ã¡nh ná»‘t láº·p láº¡i
				for i = 1, banjoMultiplierValue do
					ReplicatedStorage
						:WaitForChild("Shared")
						:WaitForChild("Network")
						:WaitForChild("RemoteEvent")
						:WaitForChild("PlayBanjo")
						:FireServer(unpack(args))
				end
			end
			task.wait(BANJO_WAIT_TIME)
		end
	end
end)


-- Toggle AutoSwing
autoSwingBtn.MouseButton1Click:Connect(function()
	_G.AutoSwing = not _G.AutoSwing
	if _G.AutoSwing then
		autoSwingBtn.Text = LANG == "vi" and "AutoSwing: Báº¬T" or "AutoSwing: ON"
		autoSwingBtn.BackgroundColor3 = Color3.fromRGB(0, 170, 0)
	else
		autoSwingBtn.Text = LANG == "vi" and "AutoSwing: Táº®T" or "AutoSwing: OFF"
		autoSwingBtn.BackgroundColor3 = Color3.fromRGB(170, 0, 0)
	end
end)

-- Toggle AutoBanjo
autoBanjoBtn.MouseButton1Click:Connect(function()
	_G.AutoBanjo = not _G.AutoBanjo
	if _G.AutoBanjo then
		autoBanjoBtn.Text = LANG == "vi" and "AutoBanjo: Báº¬T" or "AutoBanjo: ON"
		autoBanjoBtn.BackgroundColor3 = Color3.fromRGB(0, 170, 0)
	else
		autoBanjoBtn.Text = LANG == "vi" and "AutoBanjo: Táº®T" or "AutoBanjo: OFF"
		autoBanjoBtn.BackgroundColor3 = Color3.fromRGB(170, 0, 0)
	end
end)


-- Slider logic (Giá»¯ nguyÃªn)
local draggingSlider = false
sliderFrame.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
		draggingSlider = true
	end
end)
uis.InputEnded:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
		draggingSlider = false
	end
end)
uis.InputChanged:Connect(function(input)
	if draggingSlider and (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) then
		local relX = math.clamp((input.Position.X - sliderFrame.AbsolutePosition.X) / sliderFrame.AbsoluteSize.X, 0, 1)
		sliderValue = relX
		sliderFill.Size = UDim2.new(relX, 0, 1, 0)
		local waitTime = 0.5 - (sliderValue * _G.SwingSpeedDelta)
		if LANG == "vi" then
			speedLabel.Text = string.format("Tá»‘c Ä‘á»™: %d%% (%.2fs/hit)", math.floor(sliderValue * 100), waitTime)
		else
			speedLabel.Text = string.format("Speed: %d%% (%.2fs/hit)", math.floor(sliderValue * 100), waitTime)
		end
	end
end)

-- Äá»•i ngÃ´n ngá»¯
local function updateTexts(lang)
	if lang == "vi" then
		dragLabel.Text = "ðŸŽ¯ Giao diá»‡n Auto Utility (v" .. VERSION .. ")"
		swingTitle.Text = "âš”ï¸ Auto Swing / Melee"
		autoSwingBtn.Text = _G.AutoSwing and "AutoSwing: Báº¬T" or "AutoSwing: Táº®T"
		speedLabel.Text = string.format("Tá»‘c Ä‘á»™: %d%% (%.2fs/hit)", math.floor(sliderValue * 100), 0.5 - sliderValue * _G.SwingSpeedDelta)
		multiplierLabel.Text = string.format("NhÃ¢n ÄÃ¡nh (%d - %d):", MIN_MULTIPLIER, MAX_MULTIPLIER)
		multiplierInput.PlaceholderText = "Sá»‘..."
		banjoTitle.Text = "ðŸŽ¶ Auto Banjo (Dead Rail)"
		autoBanjoBtn.Text = _G.AutoBanjo and "AutoBanjo: Báº¬T" or "AutoBanjo: Táº®T"
		noteLabel.Text = string.format("Ná»‘t Banjo (%d - %d):", MIN_BANJO_NOTE, MAX_BANJO_NOTE)
		noteInput.PlaceholderText = "Ná»‘t..."
		banjoMultiplierLabel.Text = string.format("NhÃ¢n ÄÃ¡nh Banjo (%d - %d):", MIN_MULTIPLIER, MAX_MULTIPLIER)
		banjoMultiplierInput.PlaceholderText = "Sá»‘..."
		banjoSpeedLabel.Text = string.format("Tá»‘c Ä‘á»™ Banjo: %.2fs/hit", BANJO_WAIT_TIME)
		langBtn.Text = "ðŸŒ Tiáº¿ng Viá»‡t"
	else
		dragLabel.Text = "ðŸŽ¯ Auto Utility GUI (v" .. VERSION .. ")"
		swingTitle.Text = "âš”ï¸ Auto Swing / Melee"
		autoSwingBtn.Text = _G.AutoSwing and "AutoSwing: ON" or "AutoSwing: OFF"
		speedLabel.Text = string.format("Speed: %d%% (%.2fs/hit)", math.floor(sliderValue * 100), 0.5 - sliderValue * _G.SwingSpeedDelta)
		multiplierLabel.Text = string.format("Hit Multiplier (%d - %d):", MIN_MULTIPLIER, MAX_MULTIPLIER)
		multiplierInput.PlaceholderText = "Num..."
		banjoTitle.Text = "ðŸŽ¶ Auto Banjo (Dead Rail)"
		autoBanjoBtn.Text = _G.AutoBanjo and "AutoBanjo: ON" or "AutoBanjo: OFF"
		noteLabel.Text = string.format("Banjo Note (%d - %d):", MIN_BANJO_NOTE, MAX_BANJO_NOTE)
		noteInput.PlaceholderText = "Note..."
		banjoMultiplierLabel.Text = string.format("Banjo Multiplier (%d - %d):", MIN_MULTIPLIER, MAX_MULTIPLIER)
		banjoMultiplierInput.PlaceholderText = "Num..."
		banjoSpeedLabel.Text = string.format("Banjo Speed: %.2fs/hit", BANJO_WAIT_TIME)
		langBtn.Text = "ðŸŒ English"
	end
end

updateTexts(LANG)

langBtn.MouseButton1Click:Connect(function()
	if LANG == "vi" then
		LANG = "en"
	else
		LANG = "vi"
	end
	updateTexts(LANG)
end)

-- NÃºt Ä‘Ã³ng/má»Ÿ GUI (Cáº­p nháº­t kÃ­ch thÆ°á»›c)
closeBtn.MouseButton1Click:Connect(function()
	guiVisible = not guiVisible
	
	for _, v in ipairs(mainFrame:GetChildren()) do
		if v:IsA("GuiObject") and v ~= dragBar then
			v.Visible = guiVisible
		end
	end

	local goal = { Size = guiVisible and expandedSize or collapsedSize }
	TweenService:Create(mainFrame, TweenInfo.new(0.25, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), goal):Play()

	closeBtn.Text = guiVisible and "â€”" or "+"
end)
