-- Cáº¥u hÃ¬nh tá»‘c Ä‘á»™ dá»… dÃ ng Ä‘iá»u chá»‰nh
_G.SwingSpeedDelta = 0.49

-- Cáº¥u hÃ¬nh NhÃ¢n Sá»‘ Láº§n ÄÃ¡nh
local MAX_MULTIPLIER = 10
