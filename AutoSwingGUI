	if gui.Name == "AutoSwingGUI" then
		gui:Destroy()
	end
end
_G.AutoSwing = nil
_G.HitMultiplier = nil

--// Cáº¥u hÃ¬nh
local VERSION = "v1.3.3" -- Cáº­p nháº­t version
local LANG = "vi" -- vi = Tiáº¿ng Viá»‡t, en = English
